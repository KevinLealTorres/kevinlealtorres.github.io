---
import Layout from "../layouts/Layout.astro";
import Experiencia from "../components/Experiencia.astro";
import Presentacion from "../components/Presentacion.astro";
import Habilidades from "../components/Habilidades.astro";
import Educacion from "../components/Educacion.astro";
import Certificados from "../components/Certificados.astro";
import Contacto from "../components/Contacto.astro";
import Certificaciones from "../components/Certificaciones.astro";
---

<Layout
    title="Mi CV"
    description="CV en lÃ­nea del ing. kevin leal"
>
    <main
        class="max-md:m-3 m-9 bg-white shadow-lg flex md:flex-row *:min-h-screen"
    >
        <div id="informacion-personal" class="w-1/3 bg-blue-700">
            <Presentacion />
            <Habilidades />
            <hr
                class="w-48 h-1 mx-auto my-4 bg-gray-100 border-0 rounded md:my-10"
            />
            <div class="justify-items-center">
                <h3 class="font-bold text-lg">Contacto:</h3>
                <Contacto />
            </div>
        </div>
        <div id="container" class="w-2/3">
            <Experiencia />
            <Educacion />
            <Certificaciones />
            <Certificados />
        </div>
    </main>
    <style>
        body {
            @apply text-black;
        }

        #informacion-personal {
            @apply text-white;
        }
    </style>
</Layout>

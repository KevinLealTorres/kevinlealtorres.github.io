---
import Layout from "../layouts/Layout.astro";
import Experiencia from "@componentes/Experiencia.astro";
import Presentacion from "@componentes/Presentacion.astro";
import Habilidades from "@componentes/Habilidades.astro";
import Educacion from "@componentes/Educacion.astro";
import Certificados from "@componentes/Certificados.astro";
import Contacto from "@componentes/Contacto.astro";
import Certificaciones from "@componentes/Certificaciones.astro";
---

<Layout title="Mi CV" description="CV en lÃ­nea del ing. kevin leal">
    <main
        class="max-md:m-3 m-9 bg-white shadow-lg flex md:flex-row *:min-h-screen"
    >
        <div
            id="informacion-personal"
            class="relative w-1/3 bg-contain bg-[url('/Texturas-Kevin-04.png')]"
        >
            <div class="absolute inset-0 bg-black/80 z-0"></div>
            <div class="relative z-10">
                <Presentacion />
                <Habilidades />
                <hr
                    class="w-48 h-1 mx-auto my-4 bg-gray-100 border-0 rounded md:my-10"
                />
                <div class="justify-items-center">
                    <h3 class="font-bold text-lg">Contacto:</h3>
                    <Contacto />
                </div>
            </div>
        </div>
        <div id="container" class="w-2/3">
            <Experiencia />
            <Educacion />
            <Certificaciones />
            <Certificados />
        </div>
    </main>
    <style>
        body {
            @apply text-black;
        }

        #informacion-personal {
            @apply text-white;
        }
    </style>
</Layout>

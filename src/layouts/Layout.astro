---
import Trabajando from '../components/Trabajando.astro';

interface Props {
	title: string;
	description: string;
	working?: boolean;
}

const { title, description, working } = Astro.props;

import '../styles/global.css';
---

<!doctype html>
<html lang="es-MX">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		{
			working ? <Trabajando /> : null
		}
		<slot />
	</body>
</html>